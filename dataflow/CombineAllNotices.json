{
	"name": "CombineAllNotices",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "OhioNotices",
						"type": "DatasetReference"
					},
					"name": "Ohio"
				},
				{
					"dataset": {
						"referenceName": "TexasNotices",
						"type": "DatasetReference"
					},
					"name": "Texas"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "CombinedNotices",
						"type": "DatasetReference"
					},
					"name": "Output"
				}
			],
			"transformations": [
				{
					"name": "TexasFlow"
				},
				{
					"name": "OhioFlow"
				},
				{
					"name": "AddTexas"
				}
			],
			"scriptLines": [
				"source(output(",
				"          {Date Received} as string,",
				"          Company as string,",
				"          {City/County} as string,",
				"          {Potential Number Affected} as string,",
				"          {Layoff Date(s)} as string,",
				"          {Phone Number} as string,",
				"          Union as string,",
				"          {Notice ID} as string,",
				"          STATE as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Ohio",
				"source(output(",
				"          COMPANY as string,",
				"          NUMBER_AFFECTED as string,",
				"          LAYOFF_DATE as string,",
				"          DATE_RECEIVED as string,",
				"          CITY_OR_COUNTY as string,",
				"          STATE as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Texas",
				"Texas select(mapColumn(",
				"          COMPANY = WDA_NAME,",
				"          LAYOFF_NUMBER = TOTAL_LAYOFF_NUMBER,",
				"          LAYOFF_DATE = LayOff_Date,",
				"          RECEIVED_DATE = WFDD_RECEIVED_DATE,",
				"          CITY_OR_COUNTY = CITY_NAME,",
				"          STATE",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> TexasFlow",
				"Ohio select(mapColumn(",
				"          RECEIVED_DATE = {Date Received},",
				"          COMPANY = Company,",
				"          CITY_OR_COUNTY = {City/County},",
				"          LAYOFF_NUMBER = {Potential Number Affected},",
				"          LAYOFF_DATE = {Layoff Date(s)},",
				"          STATE",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> OhioFlow",
				"OhioFlow, OhioFlow union(byName: true)~> AddTexas",
				"AddTexas sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> Output"
			]
		}
	}
}